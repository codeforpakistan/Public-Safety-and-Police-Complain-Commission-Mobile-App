<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.publicsafetycomission">

    <uses-permission android:name="android.permission.INTERNET"/>

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:networkSecurityConfig="@xml/network_security_config"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.PublicSafetyComission"
        android:usesCleartextTraffic="true">
        <activity android:name=".Activities.ForgetPassword" />
        <activity android:name=".Activities.HomeScreen" />
        <activity android:name=".Activities.RegistrationActivity" />
        <activity android:name=".Activities.VerifyPhoneActivity" />
        <activity android:name=".Activities.ComplaintActivity" />
        <activity android:name=".Activities.UserProfileActivity" />
        <activity android:name=".Activities.UserloginActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
    </application>

</manifest>